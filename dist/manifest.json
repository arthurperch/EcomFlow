{
  "manifest_version": 3,
  "name": "EcomFlow",
  "version": "0.0.1",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:8080/*",
    "https://www.ebay.com/*",
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/ebay-automation.ts-2acecc3a.js"
      ],
      "matches": [
        "https://www.ebay.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://www.ebay.com/*"
      ],
      "resources": [
        "assets/ebay-automation.ts-2acecc3a.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
